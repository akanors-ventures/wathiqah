{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		"**/.env.*local"
	],
	"tasks": {
		"build": {
			"dependsOn": [
				"^build",
				"codegen"
			],
			"outputs": [
				"dist/**",
				".next/**",
				"!.next/cache/**",
				".output/**"
			]
		},
		"codegen": {
			"outputs": [
				"src/types/__generated__/**"
			]
		},
		"lint": {
			"dependsOn": [
				"^lint"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint:fix": {
			"dependsOn": [
				"^lint:fix"
			]
		},
		"format:fix": {
			"dependsOn": [
				"^format:fix"
			]
		},
		"db:generate": {
			"dependsOn": [
				"^db:generate"
			]
		},
		"test": {
			"dependsOn": [
				"^test"
			]
		}
		
		
	}
}